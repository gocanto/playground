.PHONY: format tests
.EXPORT_ALL_VARIABLES:

SHELL := /bin/bash
ROOT_PATH := $(shell pwd)

# -------------------------------------------------------------------------------------------------------------------- #
# -------------------------------------------------------------------------------------------------------------------- #

NC     := \033[0m
BOLD   := \033[1m
CYAN   := \033[36m
WHITE  := \033[37m
GREEN  := \033[0;32m
BLUE   := \033[0;34m
RED    := \033[0;31m
YELLOW := \033[1;33m

format:
	gofmt -w -s .

tests:
	go test ./...